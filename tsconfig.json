{
	"compilerOptions": {
		// Build:
		"incremental": true,
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"declaration": false,

		// Lint:
		"strict": true,
		"noImplicitAny": false,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"exclude": ["node_modules", "**/*.test.ts"]
}
