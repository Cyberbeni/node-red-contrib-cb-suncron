{
  "name": "node-red-contrib-cb-suncron",
  "version": "2.1.0-a7",
  "description": "A Node-RED node that triggers configurable outgoing messages based on the position of the sun",
  "main": "index.js",
  "author": "Benedek Kozma",
  "license": "MIT",
  "keywords": [
    "node-red",
    "sunset",
    "sunrise",
    "schedule"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Cyberbeni/node-red-contrib-cb-suncron"
  },
  "scripts": {
    "format": "eslint --max-warnings=0 --fix src/**/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "mocha \"test/**/*_spec.js\"",
    "clean": "rm -f *.tsbuildinfo && rm -rf dist .html-build && rm -f *.tgz",
    "build": "tsc && rm -f dist/*.html && rm -rf .html-build && mkdir .html-build && cp dist/*.html.js src/**.html .html-build && html-includes --src .html-build --dest dist"
  },
  "node-red": {
    "nodes": {
      "suncron": "dist/Suncron.js",
      "suncron-location": "dist/SuncronLocation.js",
      "sun-time-of-day": "dist/SunTimeOfDay.js"
    }
  },
  "dependencies": {
    "cron": "^2.1.0",
    "dayjs": "^1.11.5",
    "rxjs": "^7.5.6",
    "suncalc": "^1.9.0"
  },
  "devDependencies": {
    "@types/cron": "^2.0.0",
    "@types/node": "^18.7.18",
    "@types/node-red": "^1.2.1",
    "@types/suncalc": "^1.8.1",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "eslint": "^8.23.1",
    "eslint-plugin-rxjs": "^5.0.2",
    "html-includes": "^5.0.0",
    "mocha": "^10.0.0",
    "node-red": "^3.0.2",
    "node-red-node-test-helper": "^0.3.0",
    "typescript": "^4.8.3"
  },
  "release": {
    "branches": [
      "master"
    ]
  }
}
