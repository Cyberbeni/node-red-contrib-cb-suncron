{
  "name": "node-red-contrib-suncron-pro",
  "version": "2.0.0-alpha.29",
  "description": "A Node-RED node that triggers configurable outgoing messages based on the position of the sun",
  "main": "index.js",
  "author": "Benedek Kozma",
  "license": "MIT",
  "keywords": [
    "node-red",
    "sunset",
    "sunrise",
    "schedule"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Cyberbeni/node-red-contrib-suncron-pro"
  },
  "scripts": {
    "test": "mocha \"test/**/*_spec.js\"",
    "clean": "rm -f *.tsbuildinfo && rm -rf dist && rm -f *.tgz",
    "build": "tsc"
  },
  "node-red": {
    "nodes": {
      "suncron": "src/suncron.js",
      "suncron-location": "dist/SuncronLocation.js"
    }
  },
  "dependencies": {
    "cron": "^1.8.2",
    "dayjs": "^1.10.5",
    "rxjs": "^7.5.6",
    "suncalc": "^1.8.0"
  },
  "devDependencies": {
    "@types/cron": "^2.0.0",
    "@types/node": "^18.7.16",
    "@types/node-red": "^1.2.1",
    "@types/suncalc": "^1.8.1",
    "eslint": "^7.29.0",
    "mocha": "^9.0.1",
    "node-red": "^3.0.2",
    "node-red-node-test-helper": "^0.2.5",
    "typescript": "^4.8.3"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 3,
    "semi": false,
    "singleQuote": true
  },
  "release": {
    "branches": [
      "master"
    ]
  }
